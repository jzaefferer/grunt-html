{
  "name": "grunt-html",
  "description": "Grunt plugin for HTML validation, using the Nu Html Checker (v.Nu)",
  "version": "14.2.2",
  "homepage": "https://github.com/validator/grunt-html",
  "author": "JÃ¶rn Zaefferer <joern.zaefferer@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/validator/grunt-html.git"
  },
  "bugs": {
    "url": "https://github.com/validator/grunt-html/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "mocha": "mocha",
    "xo": "xo",
    "test": "npm run xo && npm run mocha",
    "test:coveralls": "nyc npm run mocha"
  },
  "dependencies": {
    "async": "^3.2.0",
    "chalk": "^4.1.0",
    "vnu-jar": "20.6.30"
  },
  "devDependencies": {
    "grunt": "^1.1.0",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "strip-ansi": "^6.0.0",
    "xo": "^0.37.1"
  },
  "peerDependencies": {
    "grunt": ">=0.4.0"
  },
  "keywords": [
    "gruntplugin"
  ],
  "files": [
    "{lib,tasks}/**/*.js"
  ],
  "nyc": {
    "include": [
      "lib/**/*.js"
    ],
    "reporter": [
      "html",
      "lcov",
      "text-summary"
    ]
  },
  "xo": {
    "esnext": true,
    "space": true,
    "rules": {
      "capitalized-comments": "off",
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "quote-props": [
        "error",
        "consistent"
      ],
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "unicorn/filename-case": "off",
      "unicorn/prevent-abbreviations": "off"
    },
    "overrides": [
      {
        "files": "test/*.js",
        "envs": [
          "mocha"
        ]
      }
    ]
  }
}
